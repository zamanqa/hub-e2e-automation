{
  "name": "hub-cypress-shopify",
  "version": "1.0.0",
  "description": "Cypress E2E automation for HUB application - Shopify platform",
  "main": "index.js",
  "scripts": {
    "cy:open": "node_modules\\.bin\\cypress open",
    "cy:run": "node scripts/run-cypress.js run",
    "cy:run:chrome": "node scripts/run-cypress.js run --browser chrome",
    "cy:health-check": "node scripts/run-cypress.js run --config-file cypress.health-check.config.js",
    "cy:run:customers": "node scripts/run-cypress.js run --spec 'cypress/e2e/01-customers/**/*.cy.js'",
    "cy:run:products": "node scripts/run-cypress.js run --spec 'cypress/e2e/02-products/**/*.cy.js'",
    "cy:run:orders": "node scripts/run-cypress.js run --spec 'cypress/e2e/03-orders/**/*.cy.js'",
    "allHubTestHead": "node scripts/run-cypress.js run --browser chrome --headed --spec 'cypress/e2e/**/*.cy.js'",
    "allHubTestHeadless": "node scripts/run-cypress.js run --browser chrome --headless --spec 'cypress/e2e/**/*.cy.js'",
    "test": "npm run cy:health-check"
  },
  "keywords": [
    "cypress",
    "e2e",
    "testing",
    "shopify",
    "automation"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@faker-js/faker": "^8.3.1",
    "cross-env": "^10.1.0",
    "cypress": "^13.6.2",
    "cypress-mochawesome-reporter": "^4.0.2",
    "cypress-multi-reporters": "^1.6.4",
    "dotenv": "^16.3.1",
    "mocha": "^10.2.0",
    "mochawesome": "^7.1.3",
    "mochawesome-merge": "^4.3.0",
    "mochawesome-report-generator": "^6.2.0",
    "mysql2": "^3.6.5",
    "pg": "^8.17.1"
  }
}
