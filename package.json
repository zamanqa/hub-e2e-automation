{
  "name": "hub-cypress-shopify",
  "version": "1.0.0",
  "description": "Cypress E2E automation for HUB application - Shopify platform",
  "main": "index.js",
  "scripts": {
    "open": "node_modules\\.bin\\cypress open",
    "cy:run": "dotenv -e .env -- cypress run --record",
    "cy:run:chrome": "dotenv -e .env -- cypress run --browser chrome --record",
    "cy:health-check": "dotenv -e .env -- cypress run --config-file cypress.health-check.config.js --record",
    "allHubTestHead": "dotenv -e .env -- npx cypress run --record --browser chrome --headed --spec 'cypress/e2e/**/*.cy.js'",
    "allHubTestHeadless": "dotenv -e .env -- npx cypress run --record --browser chrome --headless --spec 'cypress/e2e/**/*.cy.js'",
    "test": "npm run cy:health-check",
    "oneCase": "dotenv -e .env -- cypress run --spec 'cypress/e2e/00-login-hub/**/*.cy.js' --record"
  },
  "keywords": [
    "cypress",
    "e2e",
    "testing",
    "shopify",
    "automation"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@faker-js/faker": "^8.3.1",
    "cross-env": "^10.1.0",
    "cypress": "^13.6.2",
    "cypress-mochawesome-reporter": "^4.0.2",
    "cypress-multi-reporters": "^1.6.4",
    "dotenv": "^16.3.1",
    "dotenv-cli": "^11.0.0",
    "mocha": "^10.2.0",
    "mochawesome": "^7.1.3",
    "mochawesome-merge": "^4.3.0",
    "mochawesome-report-generator": "^6.2.0",
    "mysql2": "^3.6.5",
    "pg": "^8.17.1"
  }
}
