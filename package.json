{
  "name": "hub-cypress-shopify",
  "version": "1.0.0",
  "description": "Cypress E2E automation for HUB application - Shopify platform",
  "main": "index.js",
  "scripts": {
    "cy:open": "cypress open",
    "cy:run": "cypress run",
    "cy:run:chrome": "cypress run --browser chrome",
    "cy:run:record": "cypress run --record --key $CYPRESS_RECORD_KEY",
    "cy:health-check": "cypress run --config-file cypress.health-check.config.js",
    "cy:run:customers": "cypress run --spec 'cypress/e2e/01-customers/**/*.cy.js'",
    "cy:run:products": "cypress run --spec 'cypress/e2e/02-products/**/*.cy.js'",
    "cy:run:orders": "cypress run --spec 'cypress/e2e/03-orders/**/*.cy.js'",
    "test": "npm run cy:health-check"
  },
  "keywords": [
    "cypress",
    "e2e",
    "testing",
    "shopify",
    "automation"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@faker-js/faker": "^8.3.1",
    "cypress": "^13.6.2",
    "cypress-mochawesome-reporter": "^4.0.2",
    "cypress-multi-reporters": "^1.6.4",
    "dotenv": "^16.3.1",
    "mocha": "^10.2.0",
    "mochawesome": "^7.1.3",
    "mochawesome-merge": "^4.3.0",
    "mochawesome-report-generator": "^6.2.0",
    "mysql2": "^3.6.5",
    "pg": "^8.17.1"
  }
}
